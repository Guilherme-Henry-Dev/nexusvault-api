{
  "openapi": "3.0.3",
  "info": {
    "title": "NexusVault API",
    "version": "1.0.0",
    "description": "API do NexusVault — autenticação JWT e CRUD de jogos."
  },
  "servers": [
    { "url": "http://localhost:3333" }
  ],
  "tags": [
    { "name": "Auth", "description": "Autenticação" },
    { "name": "Games", "description": "Gerenciamento de jogos (rotas privadas)" }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string", "example": "Mensagem de erro" }
        }
      },
      "UserPublic": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "name": { "type": "string", "example": "Guilherme" },
          "email": { "type": "string", "example": "gui@teste.com" }
        }
      },
      "AuthRegisterRequest": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" }
        }
      },
      "AuthRegisterResponse": { "$ref": "#/components/schemas/UserPublic" },
      "AuthLoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" }
        }
      },
      "AuthLoginResponse": {
        "type": "object",
        "properties": {
          "token": { "type": "string", "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..." }
        }
      },
      "Game": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "title": { "type": "string", "example": "The Witcher 3" },
          "genre": { "type": "string", "example": "RPG" },
          "platform": { "type": "string", "example": "PC" },
          "releaseYear": { "type": "integer", "example": 2015 },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },
      "GameCreateRequest": {
        "type": "object",
        "required": ["title", "genre", "releaseYear"],
        "properties": {
          "title": { "type": "string" },
          "genre": { "type": "string" },
          "platform": { "type": "string" },
          "releaseYear": { "type": "integer", "minimum": 1950 }
        }
      },
      "GameUpdateRequest": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "genre": { "type": "string" },
          "platform": { "type": "string" },
          "releaseYear": { "type": "integer", "minimum": 1950 }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registrar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AuthRegisterRequest" } }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/AuthRegisterResponse" } }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Error" } }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login e obtenção de token JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AuthLoginRequest" } }
          }
        },
        "responses": {
          "200": {
            "description": "Token JWT",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/AuthLoginResponse" } }
            }
          },
          "400": {
            "description": "Credenciais inválidas",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Error" } }
            }
          }
        }
      }
    },
    "/games": {
      "get": {
        "tags": ["Games"],
        "summary": "Listar jogos do usuário",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "in": "query", "name": "q", "schema": { "type": "string" } },
          { "in": "query", "name": "genre", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Lista de jogos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Game" }
                }
              }
            }
          },
          "401": { "description": "Não autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "post": {
        "tags": ["Games"],
        "summary": "Criar jogo",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/GameCreateRequest" } }
          }
        },
        "responses": {
          "201": { "description": "Jogo criado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Game" } } } },
          "400": { "description": "Erro de validação", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "401": { "description": "Não autorizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    },
    "/games/{id}": {
      "get": {
        "tags": ["Games"],
        "summary": "Obter jogo por ID",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Jogo", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Game" } } } },
          "404": { "description": "Não encontrado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "put": {
        "tags": ["Games"],
        "summary": "Atualizar jogo",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/GameUpdateRequest" } }
          }
        },
        "responses": {
          "200": { "description": "Atualizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Game" } } } },
          "400": { "description": "Erro de validação", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } },
          "404": { "description": "Não encontrado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      },
      "delete": {
        "tags": ["Games"],
        "summary": "Remover jogo",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "in": "path", "name": "id", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "204": { "description": "Removido" },
          "404": { "description": "Não encontrado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Error" } } } }
        }
      }
    }
  }
}